---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Beaumont-Wilshire Neighborhood Association - A vibrant community in Northeast Portland" } = Astro.props;
const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | BWNA</title>
  <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`}>
</head>
<body>
  <header class="site-header">
    <div class="container header-content">
      <a href={base} class="site-logo">
        <img src={`${base}images/bwna-logo.jpg`} alt="BWNA Logo">
        <span>BWNA</span>
      </a>

      <input type="checkbox" id="nav-toggle" class="nav-toggle" aria-label="Toggle navigation">
      <label for="nav-toggle" class="hamburger" aria-hidden="true">
        <span></span>
        <span></span>
        <span></span>
      </label>

      <nav class="main-nav">
        <ul>
          <li><a href={base} class={currentPath === base || currentPath === base.replace(/\/$/, '') ? 'active' : ''}>Home</a></li>
          <li class="has-dropdown">
            <a href={`${base}about`} class={currentPath.includes('/about') ? 'active' : ''}>About Us</a>
            <ul class="dropdown">
              <li><a href={`${base}about`}>Who We Are</a></li>
              <li><a href={`${base}bylaws`}>Bylaws</a></li>
              <li><a href={`${base}policies`}>Policies</a></li>
              <li><a href={`${base}contact`}>Contact</a></li>
            </ul>
          </li>
          <li class="has-dropdown">
            <a href={`${base}events`} class={currentPath.includes('/events') || currentPath.includes('/meeting-minutes') || currentPath.includes('/get-involved') ? 'active' : ''}>What's Happening?</a>
            <ul class="dropdown">
              <li><a href={`${base}events`}>Upcoming Events</a></li>
              <li><a href={`${base}meeting-minutes`}>Meeting Minutes</a></li>
              <li><a href={`${base}get-involved`}>Get Involved</a></li>
            </ul>
          </li>
          <li class="has-dropdown">
            <a href={`${base}newsletters`} class={currentPath.includes('/newsletters') || currentPath.includes('/subscribe') || currentPath.includes('/newsletter') || currentPath.includes('/ad-rates') ? 'active' : ''}>Newsletter</a>
            <ul class="dropdown">
              <li><a href={`${base}newsletters`}>Current &amp; Archive</a></li>
              <li><a href={`${base}subscribe`}>Subscribe</a></li>
              <li><a href={`${base}newsletter-submissions`}>Newsletter Submissions</a></li>
              <li><a href={`${base}ad-rates`}>Ad Rates</a></li>
            </ul>
          </li>
          <li><a href={`${base}resources`} class={currentPath.includes('/resources') ? 'active' : ''}>Community Resources</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h4>Beaumont-Wilshire NA</h4>
          <p>Enhancing livability in Northeast Portland since the 1970s.</p>
        </div>

        <div class="footer-section">
          <h4>Quick Links</h4>
          <ul>
            <li><a href={`${base}about`}>About Us</a></li>
            <li><a href={`${base}events`}>Upcoming Events</a></li>
            <li><a href={`${base}newsletters`}>Newsletters</a></li>
            <li><a href={`${base}get-involved`}>Get Involved</a></li>
          </ul>
        </div>

        <div class="footer-section">
          <h4>Contact</h4>
          <ul>
            <li><a href="mailto:president@bwnapdx.org">president@bwnapdx.org</a></li>
            <li><a href={`${base}resources`}>Community Resources</a></li>
            <li><a href={`${base}contact`}>Contact Us</a></li>
          </ul>
        </div>

        <div class="footer-section">
          <h4>Stay Connected</h4>
          <p>Subscribe to our newsletter to receive monthly updates about BWNA activities and neighborhood news.</p>
          <a href={`${base}subscribe`} class="btn btn-primary" style="margin-top: 0.5rem;">Subscribe</a>
        </div>
      </div>

      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Beaumont-Wilshire Neighborhood Association. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script>
    // On mobile, allow tapping a dropdown parent to toggle it open
    document.querySelectorAll('.has-dropdown > a').forEach(link => {
      link.addEventListener('click', (e) => {
        if (window.innerWidth <= 768) {
          const parent = link.parentElement;
          if (!parent.classList.contains('open')) {
            e.preventDefault();
            document.querySelectorAll('.has-dropdown.open').forEach(el => el.classList.remove('open'));
            parent.classList.toggle('open');
          }
        }
      });
    });
  </script>
</body>
</html>
