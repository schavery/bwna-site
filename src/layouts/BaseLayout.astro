---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Beaumont-Wilshire Neighborhood Association - A vibrant community in Northeast Portland" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | BWNA</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <header class="site-header">
    <div class="container header-content">
      <a href="/" class="site-logo">
        <!-- Logo placeholder - replace with actual logo -->
        <svg width="40" height="40" viewBox="0 0 40 40" fill="currentColor">
          <rect x="5" y="15" width="30" height="20" rx="2"/>
          <polygon points="20,5 35,15 5,15"/>
        </svg>
        <span>BWNA</span>
      </a>
      
      <nav class="main-nav">
        <ul>
          <li><a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a></li>
          <li><a href="/about" class={currentPath === '/about' ? 'active' : ''}>About Us</a></li>
          <li><a href="/events" class={currentPath === '/events' ? 'active' : ''}>Events</a></li>
          <li><a href="/newsletters" class={currentPath === '/newsletters' ? 'active' : ''}>Newsletters</a></li>
          <li><a href="/get-involved" class={currentPath === '/get-involved' ? 'active' : ''}>Get Involved</a></li>
          <li><a href="/resources" class={currentPath === '/resources' ? 'active' : ''}>Resources</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h4>Beaumont-Wilshire NA</h4>
          <p>Enhancing livability in Northeast Portland since the 1970s.</p>
        </div>
        
        <div class="footer-section">
          <h4>Quick Links</h4>
          <ul>
            <li><a href="/about">About Us</a></li>
            <li><a href="/events">Upcoming Events</a></li>
            <li><a href="/newsletters">Newsletters</a></li>
            <li><a href="/get-involved">Volunteer</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h4>Contact</h4>
          <ul>
            <li><a href="mailto:president@bwnapdx.org">president@bwnapdx.org</a></li>
            <li><a href="/resources">Community Resources</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h4>Stay Connected</h4>
          <p>Subscribe to our newsletter to receive monthly updates about BWNA activities and neighborhood news.</p>
          <a href="/subscribe" class="btn btn-primary" style="margin-top: 0.5rem;">Subscribe</a>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Beaumont-Wilshire Neighborhood Association. All rights reserved.</p>
      </div>
    </div>
  </footer>
</body>
</html>
