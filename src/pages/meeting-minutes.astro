---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Meeting Minutes" description="BWNA meeting minutes archive.">
  <section class="hero" style="padding: 2rem 0;">
    <div class="container">
      <h1>Meeting Minutes</h1>
      <p>Records of BWNA meetings</p>
    </div>
  </section>

  <section class="page-section">
    <div class="container content-width">
      <p>
        Meeting minutes from BWNA general meetings and board meetings will be posted here
        after approval. Minutes are typically approved at the following meeting.
      </p>
      <p>
        For questions or to request copies of past minutes, please contact
        <a href="mailto:president@bwnapdx.org">president@bwnapdx.org</a>.
      </p>
      <p style="margin-top: 2rem;">
        <a href={`${base}events`}>View upcoming meetings &rarr;</a>
      </p>
    </div>
  </section>
</BaseLayout>
