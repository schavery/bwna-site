---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Newsletter Archive" description="Complete archive of BWNA newsletters from 2012 to present.">
  <section class="hero" style="padding: 2rem 0;">
    <div class="container">
      <h1>Newsletter Archive</h1>
      <p>Complete collection from 2012 to present</p>
    </div>
  </section>

  <section class="page-section">
    <div class="container content-width">
      <p>
        The complete BWNA newsletter archive dating back to 2012 is being migrated to this
        site. In the meantime, recent issues (2023&ndash;present) are available on our
        <a href={`${base}newsletters`}>newsletters page</a>.
      </p>
      <p>
        For older issues, please contact
        <a href="mailto:editor@bwnapdx.org">editor@bwnapdx.org</a>.
      </p>
      <p style="margin-top: 2rem;">
        <a href={`${base}newsletters`}>&larr; Back to Newsletters</a>
      </p>
    </div>
  </section>
</BaseLayout>
