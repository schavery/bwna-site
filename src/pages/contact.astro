---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Contact" description="Contact the Beaumont-Wilshire Neighborhood Association.">
  <section class="hero" style="padding: 2rem 0;">
    <div class="container">
      <h1>Contact Us</h1>
      <p>Get in touch with BWNA</p>
    </div>
  </section>

  <section class="page-section">
    <div class="container content-width">
      <h2>Email Contacts</h2>
      <ul style="list-style: none;">
        <li style="padding: 0.75rem 0; border-bottom: 1px solid var(--color-border);">
          <strong>President (Al Ellis):</strong>
          <a href="mailto:president@bwnapdx.org">president@bwnapdx.org</a>
        </li>
        <li style="padding: 0.75rem 0; border-bottom: 1px solid var(--color-border);">
          <strong>Treasurer (Karla Lenox):</strong>
          <a href="mailto:treasurer@bwnapdx.org">treasurer@bwnapdx.org</a>
        </li>
        <li style="padding: 0.75rem 0; border-bottom: 1px solid var(--color-border);">
          <strong>Newsletter Editor (Susan Trabucco):</strong>
          <a href="mailto:editor@bwnapdx.org">editor@bwnapdx.org</a>
        </li>
        <li style="padding: 0.75rem 0;">
          <strong>Events:</strong>
          <a href="mailto:events@bwnapdx.org">events@bwnapdx.org</a>
        </li>
      </ul>

      <h2 style="margin-top: 2rem;">Meetings</h2>
      <p>
        <strong>General Meetings:</strong> 2nd Monday of even-numbered months, 7:00 PM<br>
        <strong>Board Meetings:</strong> 2nd Monday of odd-numbered months, 7:00 PM<br>
        <strong>Location:</strong> Sylvan Learning Center, 4411 NE Fremont St (unless otherwise noted)
      </p>
      <p>
        <a href={`${base}events`}>View the full meeting schedule &rarr;</a>
      </p>
    </div>
  </section>
</BaseLayout>
