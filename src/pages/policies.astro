---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Policies" description="BWNA Policies - operational policies of the Beaumont-Wilshire Neighborhood Association.">
  <section class="hero" style="padding: 2rem 0;">
    <div class="container">
      <h1>BWNA Policies</h1>
      <p>Operational policies of the association</p>
    </div>
  </section>

  <section class="page-section">
    <div class="container content-width">
      <p>
        BWNA policies guide the day-to-day operations of the association, including
        newsletter advertising, event management, and communication standards.
      </p>
      <p>
        For questions about BWNA policies or to request a copy, please contact us at
        <a href="mailto:president@bwnapdx.org">president@bwnapdx.org</a>.
      </p>
      <p style="margin-top: 2rem;">
        <a href={`${base}about`}>&larr; Back to About Us</a>
      </p>
    </div>
  </section>
</BaseLayout>
